<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cian"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="295dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="403dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Danielle"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TxtPontuacao_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="360"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/coroa" />
    </LinearLayout>

    <TextView
        android:id="@+id/TxtDicas_Home"
        android:layout_width="325dp"
        android:layout_height="111dp"
        android:background="@color/white"
        android:text="PRIMEIRA GERAÇÃO: Linguagem máquina"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.046" />

    <ScrollView
        android:id="@+id/ScrollRanking_Home"
        android:layout_width="325dp"
        android:layout_height="150dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtDicas_Home"
        app:layout_constraintVertical_bias="0.151">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ranking"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtPrimeiroJogador_Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1º Jogador"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtSegundoJogador_Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2º Jogador"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtTerceiroJogador_Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3º Jogador"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtQuartoJogador_Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4º Jogador"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtQuintoJogador_Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5º Jogador"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/BtnIniciarJogo_Home"
        android:layout_width="133dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/orange"
        android:text="Jogar"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollRanking_Home" />

    <ImageButton
        android:id="@+id/BtnImgDeslogar_Home"
        android:layout_width="64dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BtnIniciarJogo_Home"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollRanking_Home"
        app:layout_constraintVertical_bias="0.534"
        app:srcCompat="@drawable/seta" />

    <Button
        android:id="@+id/BtnDicas_Home"
        android:layout_width="42dp"
        android:layout_height="125dp"
        android:backgroundTint="@color/cian"
        android:text="Dicas"
        android:textColor="@color/cian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/TxtDicas_Home"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464" />

</androidx.constraintlayout.widget.ConstraintLayout>